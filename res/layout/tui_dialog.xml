<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/dialog_frame"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3.0dip" 
    android:layout_marginLeft="20dip"
    >


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:textSize="20.0sp"
        android:text="标题"
         />

    <LinearLayout
        android:id="@id/dialog_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip" >

        <ScrollView
            android:id="@id/dialog_msg_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:layout_marginTop="15.0dip"
            android:layout_weight="1.0"
             >

            <TextView
                android:id="@id/dialog_msg"
                style="@android:style/Widget"
                android:textSize="18.0sp"
                android:textColor="#ff535353"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="10.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="10.0dip" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@id/iv_divider_line_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4.0dip"
        android:layout_marginRight="4.0dip" >

    </LinearLayout>

    <LinearLayout
        android:id="@id/dialog_bottom"
        android:layout_width="fill_parent"
        android:layout_height="55.0dip"
        android:orientation="horizontal"
        android:paddingBottom="5.0dip"
        android:paddingLeft="3.0dip"
        android:paddingRight="3.0dip" >

        <Button
            android:id="@id/btn_positive"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/base_btn_bg"
            android:maxLines="1"
            android:textColor="@color/base_btn_text"
            android:textSize="16.0sp"
            android:text="确定"/>

        <LinearLayout
            android:id="@id/iv_divider_line_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="4.0dip" >

            <include layout="@layout/listview_divider_line2" />
        </LinearLayout>

        <Button
            android:id="@id/btn_neutral"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/base_btn_bg"
            android:maxLines="1"
            android:textColor="@color/base_btn_text"
            android:textSize="16.0sp" 
            android:text="关闭"
            />

        <LinearLayout
            android:id="@id/iv_divider_line_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="4.0dip" >

            <include layout="@layout/listview_divider_line2" />
        </LinearLayout>

        <Button
            android:id="@id/btn_negative"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/base_btn_bg"
            android:maxLines="1"
            android:textColor="@color/base_btn_text"
            android:textSize="16.0sp"
            android:text="取消"
             />
    </LinearLayout>

</LinearLayout>