<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:focusable="true"
    android:clickable="true"
    android:selectAllOnFocus="true"
    android:background="@drawable/base_list_item_bg"
    >

    <TextView
        android:id="@+id/base_list_item_kv_key"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:duplicateParentState="true"
        android:textSize="16.0sp"
        android:textColor="@color/base_list_item_text"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="20.0dip"
        android:paddingRight="15.0dip"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:drawableRight="@drawable/base_list_item_arrow_icon"
        android:text="KEY" />

    <TextView
        android:id="@+id/base_list_item_kv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:textSize="16.0sp"
        android:textColor="@color/base_list_item_text"
        android:ellipsize="end"
        android:layout_marginRight="40.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="VALUE" />

</RelativeLayout>